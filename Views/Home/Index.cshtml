@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<!-- if there is no team selected, they are viewing Home, or all of the bowlers; otherwise make a title for the team-->
@if (Model.Team != null)
{
    <h1>@Model.Team.TeamName</h1>
}

<!--This is the table that displays the bowlers-->
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Middle Init</th>
            <th scope="col">Last Name</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip</th>
            <th scope="col">Phone Number</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var x in Model.Bowlers)
        {
            <tr>
                <td>@x.BowlerFirstName</td>
                <td>@x.BowlerMiddleInit</td>
                <td>@x.BowlerLastName</td>
                <td>@x.BowlerAddress</td>
                <td>@x.BowlerCity</td>
                <td>@x.BowlerState</td>
                <td>@x.BowlerZip</td>
                <td>@x.BowlerPhoneNumber</td>
            </tr>   
        }

    </tbody>
</table>
    <div page-info="@Model.PageNumberingInfo" page-url-team="@Model.Team">

    </div>